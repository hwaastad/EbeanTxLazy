<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="1" author="asd">
        <createTable tableName="t_customer">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)"/>
        </createTable>
        <createTable tableName="t_person">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)"/>
            <column name="customer_id" type="bigint">
                <constraints foreignKeyName="fk_person_customer_id" referencedTableName="t_customer" referencedColumnNames="id"/>
            </column>
        </createTable>
        <createTable tableName="t_pet">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)"/>
            <column name="person_id" type="bigint">
                <constraints foreignKeyName="fk_pet_person_id" referencedTableName="t_person" referencedColumnNames="id"/>
            </column>
        </createTable>
        <createTable tableName="t_pet_attribute">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)"/>
            <column name="value" type="varchar(64)"/>
            <column name="pet_id" type="bigint">
                <constraints foreignKeyName="fk_pet_attribute_pet_id" referencedTableName="t_pet" referencedColumnNames="id"/>
            </column>
        </createTable>
        <createTable tableName="t_group">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)"/>
        </createTable>
        <createTable tableName="t_person_group">
            <column name="agroup" type="bigint">
                <constraints nullable="false" foreignKeyName="group_fk" referencedTableName="t_group" referencedColumnNames="id"/>
            </column>
            <column name="aperson" type="bigint">
                <constraints nullable="false" foreignKeyName="person_fk" referencedTableName="t_person" referencedColumnNames="id"/>
            </column>          
        </createTable>
    </changeSet>
</databaseChangeLog>
